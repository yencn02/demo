<div id="login-box" class="box login-box" style="display: none;">
  <div class="login-box">
    <h1>Please Log In</h1>
    <div id="error-message" style="display: none;"></div>
    <% form_remote_for :user_session, :url => ajax_create_session_path, :html => {:class => "typical"} do |f| -%>
      <div>
        <label>Email</label>
        <%= f.text_field :email, :value => 'Email Address', :class => "user_session_email" %>
      </div>
      <div>
        <label>Password</label>
        <%= f.password_field :password, :value => 'password', :class => "user_session_password" %>
      </div>
      <input class="login_checkout" type="hidden" name="login_checkout" value="false"/>
      <div>
        <label>&nbsp;</label>
          <%= f.submit 'Login', :class => 'f-button' %>
        &nbsp; <%= link_to 'Forgot your password?', new_password_reset_path %>
      </div>
      <div class="text">
        New to Virtual Active, create a new acount <%= link_to 'here', new_user_path %>
      </div>
    <% end %>
  </div>
</div>
