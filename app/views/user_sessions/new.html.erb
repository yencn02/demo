<div id="user-sessions-new" class="content full">
  <div class="black-box login-box">
    <% form_for :user_session, :url => session_path, :html => { :class => '' } do |f| -%>
      <h1>My Account / Sign In</h1>
      <%= error_messages_for :user_session, :header_message => "authentication failed", :message => "", :class => 'errorExplanation round-corner' %>

      <div>
        <label>Email Address</label>
      </div>
      <div class="field">
        <%= f.text_field :email, :value => 'Email Address', :alt => 'Email Address', :class => 'default-value' %>
      </div>

      <div>
        <label>Password</label>
      </div>
      <div class="field">
        <%= f.password_field :password, :value => 'Password', :alt => 'Password', :class => 'default-value' %>
      </div>

      <div class="clearfix">        
        <%= link_to 'New User?', new_user_path %>
        <%= link_to 'Forgot your password?', new_password_reset_path, :class => "forgot-password" %>
        <%= f.submit 'Sign In', :class => 'blue-button' %>
      </div>
    <% end -%>
  </div>
</div>
